# Production Environment Configuration
# Configuration for production environment testing

# Application URLs
BASE_URL=https://prod.example.com
API_URL=https://api.example.com/api

# Test User Credentials
TEST_USERNAME=prodtest@example.com
TEST_PASSWORD=secureprodpass
ADMIN_USERNAME=prodadmin@example.com
ADMIN_PASSWORD=secureprodadmin

# Test Configuration
BROWSER=chromium
HEADLESS=true
TIMEOUT=90000
VIEWPORT_WIDTH=1920
VIEWPORT_HEIGHT=1080

# Reporting Configuration
GENERATE_REPORT=true
REPORT_STYLE=detailed
REPORT_PATH=reports/prod
CREATE_SCREENSHOTS=true

# Debug Configuration
DEBUG_MODE=false
VERBOSE_LOGGING=false
SAVE_CONSOLE_LOGS=false

# Performance Configuration
SLOW_MO=0
WAIT_TIMEOUT=15000

# Production Safety
READ_ONLY_MODE=true
SKIP_DESTRUCTIVE_TESTS=true
ALERT_ON_FAILURE=true